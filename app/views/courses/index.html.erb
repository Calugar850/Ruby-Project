<% if current_user.role == "teacher" %>
  <div>
    <a class="btn btn-primary btn-lg" <%= link_to 'Create course', new_course_path %></a>
    <a class="btn btn-info btn-lg" <%= link_to 'All Chapters', chapters_path %></a>
  </div>
  <p></p>

  <div>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>School ID</th>
        <th>Teacher ID</th>
        <th>Access Key</th>
        <th>Edit</th>
      </tr>
      </thead>
      <tbody>
      <% @course.each do |c| %>
        <% if current_user.id_school == c.school_id %>
        <tr>
          <th><%= c.id %></th>
          <th><%= link_to c.name, c %></th>
          <th><%= c.description %></th>
          <th><%= c.school_id %></th>
          <th><%= c.teacher_id %></th>
          <th><%= c.acces_key %></th>
          <th><%= link_to 'Edit', edit_course_path(c) %></th>
        </tr>
      <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= link_to "Back", :back, class: "btn btn-secondary" %>