<% if current_user.role == "admin" %>
<a class="btn btn-primary btn-lg" <%= link_to 'Create users', new_users_admin_path %></a>
<p></p>

<div>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Domain</th>
      <th>Role</th>
      <th>School ID</th>
    </tr>
    </thead>
    <tbody>
    <% @user.each do |u| %>
      <% if u.domain == current_user.domain && u.role != current_user.role %>
      <tr>
        <th><%= u.id %></th>
        <td><%= u.name %></td>
        <td><%= u.username %></td>
        <td><%= u.email %></td>
        <td><%= u.domain %></td>
        <td><%= u.role %></td>
        <td><%= u.id_school %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>

<% else %>
  <h1>TEACHER DASHBOARD</h1>
<% end %>